<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <ul>
    <li><%= f.label :title, 'タスク名' %>
      <%= f.text_field :title %>
    </li>
  
    <li><%= f.label :deadline, '期限' %>
      <%= f.text_field :deadline %>
    </li>
  
    <li><%= f.label :content, '内容(詳細)' %>
      <%= f.text_field :content %>
    </li>
    
    <li><%= f.label :status, 'ステータス' %>
      <%= f.select :status, ['未','進行中','済'] %>
    </li>
  
    <li><%= f.submit '投稿' %></li>
  </ul>
<% end %>