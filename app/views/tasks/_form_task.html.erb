<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-lf-offset-3 col-lg-6">

    <%= form_for(task) do |f| %>
      <% if task.errors.any? %>
        <div class="alert alert-warning">
          <ul>
            <% task.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

    <form class="form-horizontal">
      <div class="form-group">
        <label class="col-md-2 control-label">タスク名</label>
        <div class="col-md-8 col-md-offset-2">
          <%= f.text_field :title, class: 'form-control'%>
        </div>
      </div>

      <div class="form-group">
        <label class="col-md-4 control-label">内容(詳細)</label>
        <div class="col-md-8">
          <%= f.text_field :content, class: 'form-control' %>
        </div>
      </div>
  
      <div class="form-group">
        <label class="col-md-4 control-label">期限</label>
        <div class="col-md-8">
          <input type="date" class="form-control" name="deadline" placeholder="YYYY-MM-DD">
        </div>
      </div>
  
      <div class="form-group">
        <label class="col-md-4 control-label">状況</label>
        <div class="col-md-8">
          <%= f.select :status, ['未','進行中','済'] %>
        </div>
      </div>
  
      <div class="form-group">
        <div class="col-md-offset-4 col-md-8">
          <%= f.submit '投稿', class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </form>
    
    </div>
  </div>
</div>