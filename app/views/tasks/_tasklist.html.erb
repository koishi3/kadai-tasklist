<h3><%= current_user.name %>のタスク一覧</h3>

<% if @tasks.any? %>
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>状況</th>
        <th>タスク名</th>
        <th>期限</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.status %></td>
          <td><%= link_to task.title, task %></td>
          <td><%= task.deadline %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div>
    <%= paginate @tasks %>
  </div>
<% end %>

<%= link_to new_task_path, class: "btn btn-primary" do %>
  <span class="glyphicon glyphicon-pencil"></span>
  新規タスクの作成
<% end %>