<h1><%= @task.title %></h1>

<table class="table table-bordered">
  <tr>
    <th>状況</th>
    <td><%= @task.status %></td>
  </tr>
  <tr>
    <th>タスク名</th>
    <td><%= @task.title %></td>
  </tr>
  <tr>
    <th>期限</th>
    <td><%= @task.deadline %></td>
  </tr>
  <tr>
    <th>内容</th>
    <td><%= @task.content %></td>
  </tr>
</table>

<%= link_to edit_task_path, class: 'btn btn-default' do %>
  <span class="glyphicon glyphicon-pencil"></span>
  編集する
<% end %>
<%= link_to @task, method: :delete, data: {confirm: '本当に削除してよろしいですか?'}, class: 'btn btn-danger' do %>
  <span class="glyphicon glyphicon-trash"></span>
  削除する
<% end %>
